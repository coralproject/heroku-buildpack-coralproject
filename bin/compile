# bin/compile <build-dir> <cache-dir>

# Get the absolute path of the bin directory
BIN_DIR=$(cd $(dirname $0) && pwd)

$BUILD_DIR=$1
$CACHE_DIR=$2

. $BIN_DIR/../lib/utils

# Create cache dir if it doesn't exist
mkdir -p $CACHE_DIR

statusn "Instaling Docker..."
install_docker $CACHE_DIR $BUILD_DIR

statusn "Installing MongoDB..."
install_mongo $CACHE_DIR $BUILD_DIR
